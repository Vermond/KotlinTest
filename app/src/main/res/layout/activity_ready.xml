<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:background="@drawable/ui_frame_dark_transparent"
    >

    <Button
        android:id="@+id/ready_button_shop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shop"
        android:layout_margin="10dp"
        android:background="@drawable/button_red"
        android:gravity="center"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        />

    <ImageView
        android:id="@+id/ready_image_soda"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="175dp"
        android:layout_marginLeft="150dp"
        android:layout_marginRight="150dp"
        app:srcCompat="@drawable/bottle_2_960_720"
        android:contentDescription="current_soda_image"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <Button
        android:id="@+id/ready_button_soda_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="◁"
        android:gravity="center"
        android:background="@drawable/button_green"
        android:layout_marginLeft="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/ready_image_soda"
        app:layout_constraintBottom_toBottomOf="@id/ready_image_soda"
        />

    <Button
        android:id="@+id/ready_button_soda_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="▷"
        android:gravity="center"
        android:background="@drawable/button_green"
        android:layout_marginRight="30dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/ready_image_soda"
        app:layout_constraintBottom_toBottomOf="@id/ready_image_soda"
        />

    <TextView
        android:id="@+id/ready_text_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="None"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/ready_image_soda"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <Button
        android:id="@+id/ready_button_sub_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="◁"
        android:gravity="center"
        android:background="@drawable/button_green"
        android:layout_marginLeft="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/ready_text_temp"
        app:layout_constraintBottom_toBottomOf="@id/ready_text_temp"
        />

    <Button
        android:id="@+id/ready_button_sub_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="▷"
        android:gravity="center"
        android:background="@drawable/button_green"
        android:layout_marginRight="30dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/ready_text_temp"
        app:layout_constraintBottom_toBottomOf="@id/ready_text_temp"
        />

    <Button
        android:id="@+id/ready_button_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start"
        android:background="@drawable/button_red"
        android:gravity="center"
        android:layout_marginBottom="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="parent"/>

    <Button
        android:id="@+id/ready_button_rank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rank"
        android:layout_margin="10dp"
        android:background="@drawable/button_red"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

</android.support.constraint.ConstraintLayout>