<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    android:background="@drawable/ui_frame_dark_transparent">

    <Button
        android:id="@+id/shop_button_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:gravity="center"
        android:background="@drawable/button_green"
        android:layout_margin="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:id="@+id/shop_text_point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:gravity="center"
        android:text="Point : 0"
        android:textSize="26sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <Button
        android:id="@+id/shop_button_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="◁"
        android:gravity="center"
        android:background="@drawable/button_green"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@id/shop_button_case1"
        app:layout_constraintBottom_toTopOf="@id/shop_button_buy"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <Button
        android:id="@+id/shop_button_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="▷"
        android:gravity="center"
        android:background="@drawable/button_green"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@id/shop_button_case1"
        app:layout_constraintBottom_toTopOf="@id/shop_button_buy"
        app:layout_constraintRight_toRightOf="parent"
        />

    <ImageView
        android:id="@+id/shop_image_goods"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:srcCompat="@drawable/ui_icon_fastforward"
        app:layout_constraintTop_toBottomOf="@id/shop_button_case1"
        app:layout_constraintBottom_toTopOf="@id/shop_button_buy"
        app:layout_constraintLeft_toRightOf="@id/shop_button_left"
        app:layout_constraintRight_toLeftOf="@id/shop_button_right"
        android:contentDescription="아이템 이미지"
        />

    <Button
        android:id="@+id/shop_button_buy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Buy"
        android:gravity="center"
        android:background="@drawable/button_green"
        android:layout_margin="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <Button
        android:id="@+id/shop_button_case1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Soda"
        android:gravity="center"
        android:background="@drawable/button_green"
        app:layout_constraintHorizontal_weight="1"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toBottomOf="@id/shop_button_back"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/shop_button_case2"
        />

    <Button
        android:id="@+id/shop_button_case2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Item"
        android:gravity="center"
        android:background="@drawable/button_green"
        app:layout_constraintHorizontal_weight="1"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@id/shop_button_back"
        app:layout_constraintLeft_toRightOf="@id/shop_button_case1"
        app:layout_constraintRight_toRightOf="parent"
        />

    <TextView
        android:id="@+id/shop_text_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:lines="3"
        android:maxWidth="200dp"
        android:text="이 곳에는 기본적인 아이템 설명이 들어간다"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />
</android.support.constraint.ConstraintLayout>